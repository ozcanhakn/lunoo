<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A1014"
    tools:context=".RandomFragment">

    <!-- Ana gradient arka plan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient" />

    <!-- Radial gradient view - sağ üstte sabit boyutta -->
    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-200dp"
        android:background="@drawable/radial_gradient" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Başlık kısmı -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keşfet"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold" />

            <!-- Filter button -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnFilter"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/filter_button_bg"
                    android:src="@drawable/filter_icons_white"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Filter active badge -->
                <View
                    android:id="@+id/filterActiveBadge"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/circle_badge"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Hoşgeldin mesajı -->
        <LinearLayout
            android:id="@+id/welcomeContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mükemmel\nEşleşmeni Bul"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akıllı eşleştirme teknolojisi ile\nçevrenizdeki harika insanları keşfedin"
                android:textSize="16sp"
                android:textColor="#B8B8B8"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Yükleme ekranı -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:background="@drawable/glassmorphism_bg"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progressBar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:lottie_rawRes="@raw/pulse_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En uygun aday aranıyor..."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/loadingSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uyumluluk analiz ediliyor..."
                android:textSize="14sp"
                android:textColor="#B8B8B8"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Eşleşme kartı -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="200dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Ana profil resmi -->
                <ImageView
                    android:id="@+id/imgMatchPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <!-- Alt kısım gradient -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/random_person_container_bg" />

                <!-- Profil bilgileri -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- İsim ve yaş -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtMatchName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:text="Sarah"
                            android:fontFamily="@font/poppins_bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/txtMatchAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#E0E0E0"
                            android:textSize="24sp"
                            android:text="25"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="10dp" />

                    </LinearLayout>

                    <!-- Cinsiyet ve konum -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/txtMatchFlag"
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/tr"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/txtMatchGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#B8B8B8"
                            android:textSize="16sp"
                            android:text="Kadın"
                            android:fontFamily="@font/poppins_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" • "
                            android:textColor="#B8B8B8"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#B8B8B8"
                            android:textSize="14sp"
                            android:text="5 km uzakta"
                            android:fontFamily="@font/poppins_regular" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- CTA Metni -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:textColor="#B8B8B8"
            android:text="Ruh eşinizi bulmaya hazır mısınız?\nAşağıdaki sihirli butona dokunun ✨"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            app:layout_constraintBottom_toTopOf="@id/btnMatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ana aksiyon butonu -->
        <RelativeLayout
            android:id="@+id/btnMatch"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="120dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/green_gradient_bg"
            android:elevation="15dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eşleşme Bul"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <!-- Aksiyon butonları -->
        <LinearLayout
            android:id="@+id/linearll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="120dp"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Tekrar eşleş butonu -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnMatchAgain"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/skip_button_bg">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/cancelwhiteicon"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mesaj gönder butonu -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnSendMessage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/message_button_bg">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/messageiconwhitee"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>