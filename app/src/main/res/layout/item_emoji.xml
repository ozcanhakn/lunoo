<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/emoji_container"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/emoji_item_bg"
        android:clickable="true"
        android:focusable="true"
        android:elevation="2dp">

        <!-- SeÃ§im Efekti -->
        <View
            android:id="@+id/selection_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_selection_overlay_bg"
            android:visibility="gone"
            android:alpha="0"/>

        <!-- Emoji Text -->
        <TextView
            android:id="@+id/emoji_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ðŸ˜Š"
            android:textSize="32sp"
            android:elevation="4dp"/>

        <!-- Hover/Press Efekti -->
        <View
            android:id="@+id/press_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33FFFFFF"
            android:visibility="gone"
            android:alpha="0"/>

    </RelativeLayout>

</RelativeLayout>

