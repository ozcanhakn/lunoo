<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E13"
    tools:context=".PersonalInformationActivity">

    <!-- Animated Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient" />

    <!-- Floating Orbs for Visual Appeal -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:alpha="0.3"
        android:background="@drawable/floating_orb_1" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:alpha="0.2"
        android:background="@drawable/floating_orb_2" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="150dp"
        android:alpha="0.25"
        android:background="@drawable/floating_orb_3" />

    <!-- Progress Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active"
            android:layout_marginHorizontal="2dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@drawable/progress_inactive"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- Header Section with Animation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:id="@+id/textUpper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_you_little"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="28sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seni daha iyi tanıyabilmemiz için bazı bilgilere ihtiyacımız var"
                    android:textColor="#80FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Profile Photo Section with Glassmorphism -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/personalInfoImgContainer"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="20dp"
                    app:cardMaxElevation="20dp"
                    android:layout_gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_photo_bg">

                        <ImageView
                            android:id="@+id/personalInfoPhoto"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_click_ph"
                            android:scaleType="centerCrop" />

                        <!-- Glassmorphism Overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:translationZ="90dp"
                            android:background="@drawable/glassmorphism_overlay" />

                        <!-- Edit Button with Modern Design -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="12dp"
                            app:cardBackgroundColor="@color/accent_primary">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_camera_alt_24"
                                app:tint="#FFFFFF" />

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textUpper3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profilin için bir fotoğraf seçmelisin"
                    android:textColor="#66FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <!-- Personal Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glassmorphism_card_bg"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kişisel Bilgiler"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Modern Input Fields -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/ModernTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#80FFFFFF"
                            android:background="@drawable/modern_input_bg"
                            android:padding="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/ModernTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtSurname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/surname"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#80FFFFFF"
                            android:background="@drawable/modern_input_bg"
                            android:padding="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/ModernTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#80FFFFFF"
                            android:background="@drawable/modern_input_bg"
                            android:padding="16dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Age Selector with Modern Design -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yaş"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/modern_input_bg">

                            <EditText
                                android:id="@+id/edtBirthdate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/birtdate"
                                android:textColor="#FFFFFF"
                                android:textColorHint="#80FFFFFF"
                                android:background="@android:color/transparent"
                                android:padding="16dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:cursorVisible="false" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#80FFFFFF" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- About Yourself Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glassmorphism_card_bg"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_yourself"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Modern Horoscope Selector -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Burç"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/modern_input_bg">

                            <Spinner
                                android:id="@+id/edtHoroscope"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:paddingHorizontal="16dp"
                                android:popupBackground="@drawable/spinner_dropdown_background" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_expand_more"
                                app:tint="#80FFFFFF" />

                        </FrameLayout>

                    </LinearLayout>

                    <!-- Modern Gender Selector -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinsiyet"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/modern_input_bg">

                            <Spinner
                                android:id="@+id/spGender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:paddingHorizontal="16dp"
                                android:popupBackground="@drawable/spinner_dropdown_background" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_expand_more"
                                app:tint="#80FFFFFF" />

                        </FrameLayout>

                    </LinearLayout>

                    <!-- Modern Country Selector -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ülke"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/modern_input_bg">

                            <Spinner
                                android:id="@+id/spinnerCountry"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:paddingHorizontal="16dp"
                                android:popupBackground="@drawable/spinner_dropdown_background" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_selected_flag"
                                    android:layout_width="24dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:scaleType="fitXY"
                                    android:visibility="visible" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_expand_more"
                                    app:tint="#80FFFFFF" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Modern Continue Button with Gradient and Animation -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/btnStarting"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/modern_gradient_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/starting"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#FFFFFF" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Hidden Continue Button (keeping for compatibility) -->
            <RelativeLayout
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/login_button_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="@string/continue1"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>