<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1014"
    tools:context=".ViewerActivity">



    <TextureView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hostView"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/percentege20_black_bg"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/txtStreamerPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/streamerPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/txtStreamerSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="HakanOZCAN"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_person_add_alt_24"/>

                <TextView
                    android:id="@+id/txtStreamerFollowers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:layout_marginStart="2dp"
                    android:text="24.444"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="#fff"
            android:id="@+id/btnSendFollowReq"
            android:background="@drawable/green_gradient_bg"
            android:clickable="true"
            android:layout_marginStart="15dp"
            android:focusable="true"
            app:cardCornerRadius="100dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/green_gradient_bg"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancelOnlineBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:translationZ="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp">

        <!-- Viewer Count -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/percentege20_black_bg"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/eyeviewer" />

            <TextView
                android:id="@+id/txtViewerLiveStream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:textColor="#fff"
                android:text="0"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/exitStream1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/cancelwhiteicon"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/exitStream"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/cancelwhiteicon"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Top Gifters Competition Bar Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical">

        <!-- First Gifter Profile -->
        <RelativeLayout
            android:id="@+id/cardProfileImageFirstSecondGifter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFrameFirstGifter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@color/gray_scale" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageFirstGifter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:background="@drawable/white_boder_color"/>

        </RelativeLayout>

        <!-- Competition Progress Bar with Gradient -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#1A1A1A">

            <com.lumoo.CustomDualProgressBar
                android:id="@+id/giftCountProgressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                style="?android:attr/progressBarStyleHorizontal"

                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <!-- Second Gifter Profile -->
        <RelativeLayout
            android:id="@+id/cardProfileImageSecondGifter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFrameSecondGifter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@color/gray_scale" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageSecondGifter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:background="@drawable/white_boder_color"/>

        </RelativeLayout>

    </LinearLayout>



    <!-- Gift Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/giftStream"
        android:visibility="visible"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        android:translationZ="180dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#fff"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gift_icon"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <!-- Hediye RecyclerView Container - Mevcut recyclerViewGifts'in yerine geçecek -->
    <LinearLayout
        android:id="@+id/giftContainer"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:translationZ="180dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/gift_container_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Hediyeler başlığı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gift_header"
                app:tint="@color/gift_primary_color"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hediyeler"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <ImageView
                android:id="@+id/btnCloseGifts"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/gift_secondary_color" />

        </LinearLayout>

        <!-- Hediye RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scrollbars="none"
            android:overScrollMode="never" />

    </LinearLayout>

    <!-- Message Button -->
    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/blue_shape_bg"
        android:id="@+id/messageStream"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:translationZ="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_message_24"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!-- Gift Animation -->
    <ImageView
        android:id="@+id/giftImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:translationZ="180dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:elevation="10dp" />

    <!-- Live Stream Chat -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLiveStreamChat"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="10dp"
        android:translationZ="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:overScrollMode="never"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="100dp"/>

    <!-- Message Input Box -->
    <LinearLayout
        android:id="@+id/cardMessageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationZ="90dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#0A1014"
        android:layout_alignParentBottom="true"
        android:elevation="4dp">

        <!-- Message Input Field -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#21272B">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <!-- Text Input -->
                <EditText
                    android:id="@+id/edtMessageBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Mesaj yazın"
                    android:textColorHint="#8B9598"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:background="#CC21272B"
                    android:padding="12dp"
                    android:maxLines="4"
                    android:minHeight="48dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:imeOptions="actionSend"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Send Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#25D366"
            app:cardElevation="2dp">

            <ImageButton
                android:id="@+id/btnSendMessageLiveStream"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/sentsendbuttonimg"
                android:scaleType="centerInside"
                android:padding="12dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>