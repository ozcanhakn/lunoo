<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/recItemConst"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Çerçeve (Frame) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserFrameRecChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:cardElevation="0dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/userFrameRecChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

    <!-- Profil Fotoğrafı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserImageRecChat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/userImageRecChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>

    </androidx.cardview.widget.CardView>

    <!-- Kullanıcı Adı -->
    <TextView
        android:id="@+id/txtFriendRequestName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@id/cardUserImageRecChat"
        app:layout_constraintTop_toTopOf="@id/cardUserImageRecChat"
        app:layout_constraintEnd_toStartOf="@id/txtLastMessageTime"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Kullanıcı Adı"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Son Mesaj -->
    <TextView
        android:id="@+id/txtRecChatUserMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtFriendRequestName"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toEndOf="@id/cardUserImageRecChat"
        app:layout_constraintEnd_toStartOf="@id/unreadCountBadge"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="#8E8E93"
        android:text="Mesaj içeriği"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Son Mesaj Zamanı -->
    <TextView
        android:id="@+id/txtLastMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#8E8E93"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toTopOf="@id/txtFriendRequestName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:text="12:30"/>

    <!-- Okunmamış Mesaj Badge'i -->
    <TextView
        android:id="@+id/unreadCountBadge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/unread_message_badge"
        android:text="3"
        android:textSize="11sp"
        android:textColor="#fff"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/txtLastMessageTime"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <!-- Ok İşareti -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>