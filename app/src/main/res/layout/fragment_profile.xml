<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2024"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Üst Görsel Alanı -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnCardProfile"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:translationZ="90dp">

            <!-- Geri Butonu -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:translationZ="90dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>

            <!-- Arka Plan Fotoğrafı -->
            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#2A3238"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@color/cardview_dark_background"/>

            <!-- Arka plan için overlay (opsiyonel - daha iyi görünüm için) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient_overlay"
                app:layout_constraintTop_toTopOf="parent"
                android:alpha="0.3"/>

            <!-- Profil Fotoğrafı (Daire) -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="140dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:civ_border_width="4dp"
                app:civ_border_color="#ffffff"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_launcher_background"
                android:translationZ="90dp"/>

            <!-- Profil fotoğrafı düzenleme ikonu -->
            <ImageView
                android:id="@+id/btnEditProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_edit_bg"
                android:src="@drawable/ic_edit"
                android:padding="6dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@id/profileImage"
                app:layout_constraintEnd_toEndOf="@id/profileImage"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Kullanıcı Bilgileri Alanı -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0A1014"
            android:paddingTop="70dp"
            android:translationZ="0dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/linearNameandSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text=""
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:id="@+id/txtSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_bold"/>

                <ImageView
                    android:id="@+id/imgGenderFlag"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/linearNameandSurname"
                android:layout_marginTop="5dp">



                <TextView
                    android:id="@+id/txtUserNameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#B0B0B0"
                    android:text="username"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#B0B0B0"
                    android:text=" • "
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/txtUserCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#B0B0B0"
                    android:text="Country"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <!-- İstatistikler -->
            <LinearLayout
                android:id="@+id/linearCountContainer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearUserName"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/userPostCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_bold"
                        android:text="0"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_regular"
                        android:text="gönderi"
                        android:textColor="#B0B0B0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/userFollowerCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_bold"
                        android:text="0"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_regular"
                        android:text="takipçi"
                        android:textColor="#B0B0B0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/userFollowCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_regular"
                        android:text="takip"
                        android:textColor="#B0B0B0"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Butonlar -->
            <LinearLayout
                android:id="@+id/linearBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/linearCountContainer1">

                <RelativeLayout
                    android:id="@+id/btnLive"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/btn_live_gradient"
                    android:elevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Canlı Yayın Aç"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_share_gradient"
                    android:elevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gönderi Paylaş"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Kullanıcı Detayları -->
            <LinearLayout
                android:id="@+id/linearUserDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearBtnContainer"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/info_tag_bg"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/horoscope1"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/txtHoroscope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burç"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/info_tag_bg"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:id="@+id/imgCountryFlagProfile"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="6dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/txtCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ülke"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/info_tag_bg"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ageicon"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/txtUserAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yaş"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnFriendRequests"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:visibility="gone"
                    android:src="@drawable/baseline_person_add_alt_1_24"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- TabLayout ve ViewPager -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0A1014">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutProfile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#0A1014"
                app:tabTextColor="#B0B0B0"
                app:tabSelectedTextColor="#fff"
                app:tabIndicatorColor="#4CAF50"
                app:tabIndicatorHeight="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabGravity="fill"
                app:tabMode="fixed"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pagerProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tabLayoutProfile"
                android:layout_marginTop="1dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>