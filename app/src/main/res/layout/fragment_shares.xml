<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SharesFragment"
    android:background="#0A1014">


    <!-- Ana gradient arka plan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient" />

    <!-- Radial gradient view - sağ üstte sabit boyutta -->
    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-200dp"
        android:background="@drawable/radial_gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerShares"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieGhostShare"
        android:layout_width="250dp"
        android:translationZ="90dp"
        android:layout_height="250dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/lottieghost"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>


    </RelativeLayout>

</FrameLayout>