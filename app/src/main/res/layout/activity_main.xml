<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Background Animation Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Floating Hearts Animation -->
        <ImageView
            android:id="@+id/heart1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:alpha="0.7"
            android:src="@drawable/ic_heart"
            app:tint="@color/white_transparent" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="200dp"
            android:alpha="0.5"
            android:src="@drawable/ic_heart"
            app:tint="@color/pink_transparent" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="300dp"
            android:alpha="0.6"
            android:src="@drawable/ic_heart"
            app:tint="@color/white_transparent" />

        <ImageView
            android:id="@+id/heart4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="400dp"
            android:alpha="0.4"
            android:src="@drawable/ic_heart"
            app:tint="@color/pink_transparent" />

    </FrameLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Logo Container with Glow Effect -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Logo Glow Background -->
            <View
                android:id="@+id/logoGlow"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:alpha="0.3"
                android:background="@drawable/circle_glow" />

            <!-- Main Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/lunoo_logo"
                />

        </RelativeLayout>

        <!-- App Name with Shadow -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_bold"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="LUNOO"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold" />

        <!-- Subtitle with Typewriter Effect -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:alpha="0.9"
            android:fontFamily="@font/poppins_light"
            android:text="Keşfet, Anıları Paylaş"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Join LUNOO Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/joinButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/primary_gradient_start"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_button_primary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="LUNOO'YA KATIL"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Shimmer Effect -->
                    <View
                        android:id="@+id/shimmerEffect1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:background="@drawable/shimmer_gradient" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Login Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/stroke_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Oturum Aç"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Google Login Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/googleLoginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/googleIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:translationZ="90dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/ic_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Google ile Giriş Yap"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Pulse Animation Ring -->
    <View
        android:id="@+id/pulseRing1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:alpha="0.1"
        android:background="@drawable/pulse_ring" />

    <View
        android:id="@+id/pulseRing2"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:alpha="0.05"
        android:background="@drawable/pulse_ring" />

    <!-- Floating Action Elements -->
    <ImageView
        android:id="@+id/floatingIcon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:alpha="0.6"
        android:src="@drawable/ic_star"
        app:tint="@color/white_transparent" />

    <ImageView
        android:id="@+id/floatingIcon2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="250dp"
        android:alpha="0.5"
        android:src="@drawable/ic_moon"
        app:tint="@color/yellow_transparent" />

</RelativeLayout>