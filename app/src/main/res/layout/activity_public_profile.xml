<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1014"
    tools:context=".PublicProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Üst Görsel Alanı -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnCardProfile"
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageView
                android:id="@+id/btnBackk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:translationZ="90dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>

            <ImageView
                android:id="@+id/imgPublicProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Kullanıcı Bilgileri Alanı -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#0A1014">

            <LinearLayout
                android:id="@+id/linearNameandSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/publicProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="Ali"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/txtSurnamePublicProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:text="Karadağ"
                    android:textSize="17sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"/>

                <ImageView
                    android:id="@+id/imgGenderFlagPP"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearNameandSurname"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:textColor="#E0E0E0"
                    android:textSize="14sp"
                    android:text="Kullanıcı Adı: "
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/txtUserNamePublicProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#E0E0E0"
                    android:text="username"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#E0E0E0"
                    android:text="|"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/txtUserPublicCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#E0E0E0"
                    android:text="Country"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearCountContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearUserName"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userPostCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_regular"
                        android:text="100"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="gönderi"
                        android:textColor="#fff"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userFollowerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_regular"
                        android:text="100"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="takipçi"
                        android:textColor="#fff"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userFollowCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center_horizontal"
                        android:text="100"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="takip"
                        android:textColor="#fff"/>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/linearCountContainer">


                <RelativeLayout
                    android:id="@+id/btnAddFriendRequest"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_follow_bg">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Takip Et"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_centerInParent="true"/>




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnMessagePublicProfile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/message_gradient_bg">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Mesaj"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_centerInParent="true"/>




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnPublicReport"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/report_gradient_bg">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Raporla"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_centerInParent="true"/>




                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linearBtnContainer">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edt_register_bg">

                    <ImageView

                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/horoscope1"/>


                    <TextView
                        android:id="@+id/txtHoroscopePublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burç"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edt_register_bg">

                    <ImageView
                        android:id="@+id/imgCountryFlagPublicProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        />


                    <TextView
                        android:id="@+id/txtCountryPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ülke"
                        android:layout_marginStart="10dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edt_register_bg">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ageicon"
                        />


                    <TextView
                        android:id="@+id/txtUserAgePublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yaş"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"/>


                </LinearLayout>



            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPostsPublicUser"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>

    </LinearLayout>


</ScrollView>