<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="ConnectingActivity">

    <!-- Arka plan kamera görüntüsü -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Üst gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/top_gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Alt gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bottom_gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Üst bilgi alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Arama durumu ikonu -->
        <ImageView
            android:id="@+id/callStatusIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_call_outgoing"
            app:tint="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Arama durumu metni -->
        <TextView
            android:id="@+id/callStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Arama Yapılıyor..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Kullanıcı adı -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Orta kısım - Profil resmi ve animasyon -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lottie animasyon -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/matchingAnimation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/matching_animation" />

        <!-- Profil resmi -->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/baseline_person_add_alt_1_24"
            android:elevation="4dp"
            app:civ_border_width="3dp"
            app:civ_border_color="#FFFFFF" />

    </RelativeLayout>

    <!-- Alt kontrol alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="80dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bekleme süre göstergesi -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginBottom="24dp"
            android:max="30"
            android:progress="0"
            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#33FFFFFF" />

        <!-- Bekleme metni -->
        <TextView
            android:id="@+id/waitingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yanıt bekleniyor..."
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- İptal butonu -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancelCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_end"
            android:backgroundTint="#FF4444"
            app:tint="#FFFFFF"
            app:elevation="8dp"
            app:borderWidth="0dp" />

    </LinearLayout>

    <!-- Kamera değiştirme butonu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/switchCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_camera_switch"
        android:backgroundTint="#33FFFFFF"
        app:tint="#FFFFFF"
        app:elevation="4dp"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>