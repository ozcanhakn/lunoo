<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#fff"
    tools:context=".ForgotPasswordActivity">

    <!-- Ana gradient arka plan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient" />

    <!-- Radial gradient view - sağ üstte sabit boyutta -->
    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-200dp"
        android:background="@drawable/radial_gradient" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:id="@+id/topTextForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:fontFamily="@font/br_firma_medium"
        android:textSize="18sp"
        android:text="Şifremi unuttum"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/emailEdittextForgotPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:hint="Email address"
        android:fontFamily="@font/br_firma_medium"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:paddingStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/topTextForgot"
        android:background="@drawable/edittext_login_bg"
        tools:ignore="RtlSymmetry" />

    <RelativeLayout
        android:id="@+id/continueButtonForgot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_post_share_bg"
        app:layout_constraintTop_toBottomOf="@+id/emailEdittextForgotPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devam et"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="@font/br_firma_medium"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUNOO"
        android:textSize="20sp"
        android:textColor="#E729C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerInParent="true"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>