<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    tools:context=".LiveStreamsFragment">






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLiveStream"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:overScrollMode="never"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAstronaut"
        android:layout_width="200dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/lottieghost"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/lottieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:visibility="gone"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Burası şimdilik boş gibi görünüyor"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/lottieAstronaut"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>

</FrameLayout>