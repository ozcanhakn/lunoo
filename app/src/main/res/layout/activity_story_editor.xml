<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryEditorActivity"
    android:id="@+id/story_editor"
    android:background="#000">

    <!-- Main Image View -->
    <ImageView
        android:id="@+id/iv_storyUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_controls"
        android:scaleType="centerCrop"
        android:layout_margin="2dp"/>

    <!-- Trash Bin Icon (initially hidden) -->
    <ImageView
        android:id="@+id/trash_bin_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_delete"
        android:background="@drawable/circle_button_modern"
        android:padding="15dp"
        android:translationZ="9dp"
        android:visibility="gone"
        app:tint="#FF5252"/>

    <FrameLayout
        android:id="@+id/tagContainer"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:translationZ="90dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:padding="8dp"/>


    <!-- Drawing View (overlays the image when drawing) -->
    <com.lumoo.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_controls"
        android:layout_above="@id/bottom_controls"
        android:layout_margin="2dp"
        android:visibility="gone"
        android:background="@android:color/transparent"/>

    <!-- Top Controls with Modern Gradient -->
    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:translationZ="90dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        >

        <!-- Close Button with Modern Design -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/circle_button_modern"
            android:padding="12dp"
            app:tint="#ffffff"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>



        <RelativeLayout
            android:id="@+id/btn_add_person"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_button_ripple"
            android:layout_marginEnd="16dp"
            android:elevation="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_white_sticker"/>
        </RelativeLayout>

        <!-- Text Tool with Modern Design -->
        <RelativeLayout
            android:id="@+id/btn_add_text"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_button_ripple"
            android:layout_marginEnd="16dp"
            android:elevation="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Aa"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Drawing Tool with Modern Design -->
        <RelativeLayout
            android:id="@+id/btn_draw"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:background="@drawable/circle_button_ripple"
            android:layout_marginEnd="16dp"
            android:elevation="4dp">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_brush"
                app:tint="#ffffff"/>
        </RelativeLayout>

        <!-- Sticker Tool with Modern Design -->
        <RelativeLayout
            android:id="@+id/btn_sticker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_button_ripple"
            android:elevation="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ðŸ˜Š"
                android:textSize="20sp"/>
        </RelativeLayout>

    </LinearLayout>

    <!-- Bottom Controls with Modern Gradient -->
    <!-- Bottom Controls with Modern Gradient - GÃƒÅ“NCELLENMÃ„Â°Ã…Å¾ VERSÃ„Â°YON -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/gradient_overlay_bottom">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/pb_storyUp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="#ffffff"/>

        <!-- Modern Upload Button - GÃƒÅ“NCELLENMÃ„Â°Ã…Å¾ VERSÃ„Â°YON -->
        <RelativeLayout
            android:id="@+id/btn_story_up"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@drawable/circle_button_glow"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            android:layout_marginBottom="10dp">

            <!-- Hover/ripple efekti -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button_ripple"
                android:clickable="false"/>

            <!-- Send icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_send"
                app:tint="#FFFFFF"
                android:elevation="2dp"/>

            <!-- Subtle loading overlay -->
            <View
                android:id="@+id/loading_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33ffffff"
                android:visibility="gone"
                android:clickable="true"/>

        </RelativeLayout>

        <!-- Caption Text (optional) -->


    </LinearLayout>


    <!-- Text Edit Panel - Instagram Style -->

    <RelativeLayout
        android:id="@+id/text_edit_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <!-- GÃ¶rÃ¼nmez Input Container -->
        <RelativeLayout
            android:id="@+id/hidden_input_container"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:visibility="invisible">

            <EditText
                android:id="@+id/hidden_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationZ="90dp"
                android:textColor="@android:color/transparent"
                android:cursorVisible="true"
                android:inputType="textCapSentences|textMultiLine"
                android:imeOptions="actionDone"/>

        </RelativeLayout>

        <!-- Instagram Style Text Editor Panel - YENÃ„Â° DÃƒÅ“ZEN -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp">

            <!-- Dinamik Liste - ÃƒÅ“stte deÃ„Å¸iÃ…Å¸ken -->
            <HorizontalScrollView
                android:id="@+id/dynamic_list_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/dynamic_list_container"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Dinamik liste ÃƒÂ¶Ã„Å¸eleri buraya programatik olarak eklenecek -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Sabit Liste - Altta sabit -->
            <HorizontalScrollView
                android:id="@+id/fixed_list_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/dynamic_list_scroll"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/fixed_list_container"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Aa (font seÃƒÂ§mek iÃƒÂ§in) -->
                    <RelativeLayout
                        android:id="@+id/btn_font_selector"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/modern_tab_unselected_bg"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_font"/>
                    </RelativeLayout>

                    <!-- Renk paleti ikonu -->
                    <RelativeLayout
                        android:id="@+id/btn_color_palette"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/modern_tab_unselected_bg">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/color_wheele"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>



        </RelativeLayout>

    </RelativeLayout>

    <!-- Drawing Panel -->
    <!-- Drawing Panel kÄ±smÄ±nÄ± gÃ¼ncelledik -->
    <RelativeLayout
        android:id="@+id/drawing_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        android:visibility="gone"
        android:layout_below="@id/top_controls"
        android:layout_above="@id/bottom_controls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/panel_bg_modern"
            android:padding="28dp">

            <!-- Brush Size Slider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FÃ„Â±rÃƒÂ§a Boyutu"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="14dp"/>

            <SeekBar
                android:id="@+id/seekbar_brush_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="20"
                android:layout_marginBottom="24dp"
                android:progressTint="#ffffff"
                android:thumbTint="#ffffff"
                android:thumb="@drawable/seekbar_thumb"/>

            <!-- Color Palette - BU KISMI EKLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renk SeÃƒÂ§in"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="14dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <RelativeLayout
                    android:id="@+id/drawing_color_palette"
                    android:layout_width="wrap_content"
                    android:layout_height="84dp"/>

            </HorizontalScrollView>

            <!-- Quick Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="18dp">

                <RelativeLayout
                    android:id="@+id/btn_undo_drawing"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_tool_button_bg"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="GERÃ„Â°"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_semibold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_clear_drawing"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_tool_button_bg"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="TEMÃ„Â°ZLE"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_semibold"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Confirm/Cancel Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/btn_cancel_drawing"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_cancel_button_bg"
                    android:layout_marginEnd="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Ã„Â°PTAL"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:letterSpacing="0.1"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_confirm_drawing"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_confirm_button_bg"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="TAMAM"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:letterSpacing="0.1"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Sticker Panel -->
    <RelativeLayout
        android:id="@+id/sticker_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        android:visibility="gone"
        android:layout_below="@id/top_controls"
        android:layout_above="@id/bottom_controls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/panel_bg_modern"
            android:padding="28dp">

            <!-- Category Tabs with enhanced design -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/category_tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tab_smileys"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="ðŸ˜Š"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:background="@drawable/modern_tab_selected_bg"
                        android:layout_marginEnd="8dp"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/tab_hearts"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="â¤ï¸"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:background="@drawable/modern_tab_unselected_bg"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/tab_animals"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="ðŸ¦¢"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:background="@drawable/modern_tab_unselected_bg"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/tab_food"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="ðŸ¥©"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:background="@drawable/modern_tab_unselected_bg"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/tab_objects"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="ðŸ–¼ï¸"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:background="@drawable/modern_tab_unselected_bg"
                        android:elevation="2dp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Enhanced Emoji Grid -->
            <GridView
                android:id="@+id/emoji_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:horizontalSpacing="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:verticalSpacing="8dp"
                android:layout_marginBottom="24dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                />

            <!-- Search and Recent Emojis Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/emoji_search"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Emoji ara..."
                    android:textColor="#ffffff"
                    android:textColorHint="#888888"
                    android:textSize="16sp"
                    android:background="@drawable/modern_text_input_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/recent_emojis_label"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Yeni"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/modern_tab_selected_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

            </LinearLayout>

            <!-- Close Button -->
            <RelativeLayout
                android:id="@+id/btn_close_sticker"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/modern_cancel_button_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="KAPAT"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0.1"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/panel_add_person"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        android:visibility="gone"
        android:layout_below="@id/top_controls">


        <LinearLayout
            android:id="@+id/linearAddPersonStory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_bg_bg"
            android:padding="1dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                app:tint="#666666" />

            <EditText
                android:id="@+id/searchEditTextStory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Etiketlenecek kullanÄ±cÄ±yÄ± ara..."
                android:textColor="#fff"
                android:textColorHint="#ababab"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:inputType="text"
                android:maxLines="1"/>

        </LinearLayout>

        <!-- RecyclerView for users -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recAddPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearAddPersonStory"
            android:padding="8dp"
            android:clipToPadding="false"/>
        
        
        
        
    </RelativeLayout>

</RelativeLayout>