<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/cardOnlineUser"
    android:layout_margin="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <!-- Online Status Indicator -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOnlineStatus"
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:cardCornerRadius="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:layout_marginStart="20dp">



        </androidx.cardview.widget.CardView>

        <!-- Profile Image Container -->
        <RelativeLayout
            android:id="@+id/cardProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgOnlineFrame"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                />




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/onlineProfileImage"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                android:background="@drawable/white_boder_color"/>


        </RelativeLayout>



        <!-- User Name -->
        <TextView
            android:id="@+id/txtNameOnline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/cardProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Mustafa"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/txtAgeOnlineLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtNameOnline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/txtAgeOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:text="29"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"/>


            <!-- Country Flag -->
            <ImageView
                android:id="@+id/imgCountryFlag"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:src="@drawable/tr"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/imgGenderFlagOnline"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
        <!-- User Age -->




    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>