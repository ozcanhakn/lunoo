<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryActivity"
    android:id="@+id/story"
    android:background="@drawable/gradient_background_story">

    <!-- Header with close button -->
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/circle_button_bg"
        android:padding="8dp"
        app:tint="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main preview container with glassmorphism effect -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_preview_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_action_buttons">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/glassmorphism_bg">

            <!-- Image preview -->
            <ImageView
                android:id="@+id/iv_storyUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/dashed_border_bg"
                android:layout_margin="2dp"/>

            <!-- Placeholder content when no image selected -->
            <LinearLayout
                android:id="@+id/ll_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_camera_alt"
                    app:tint="@color/primary_accent"
                    android:alpha="0.6"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hikayeni Oluştur"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:alpha="0.8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kameradan çek veya galeriden seç"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Progress indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/pb_storyUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:indicatorColor="@color/primary_accent"
                app:trackColor="@color/primary_accent_alpha" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action buttons container -->
    <LinearLayout
        android:id="@+id/ll_action_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_story_upload">

        <!-- Camera button with icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_camera_container"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/camera_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamera"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gallery button with icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_gallery_container"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="30dp"
            android:background="@drawable/gallery_button_gradient"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/gallery_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_gallery"
                    app:tint="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galeri"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Upload button with gradient and animation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_story_upload"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/upload_button_gradient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="HİKAYEYİ PAYLAŞ"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_send"
                app:tint="@android:color/white"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Floating action indicators -->
    <ImageView
        android:id="@+id/iv_filter_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_filter"
        android:background="@drawable/circle_button_bg"
        android:padding="10dp"
        app:tint="@android:color/white"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>